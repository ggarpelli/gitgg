{
    "name": "GuilhermeGarpelli",
    "displayName": "Gitgg - Branch File Diff",
    "description": "An extension for comparing files across different Git branches.",
    "version": "0.1.2",
    "publisher": "ggarpelli",
    "icon": "icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/ggarpelli/gitgg.git"
    },
    "engines": {
        "vscode": "^1.81.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:gitgg.compareFile"
    ],
    "main": "./dist/extension.js",
    "files": [
        "dist",
        "icon.png"
    ],
    "contributes": {
        "commands": [
            {
                "command": "gitgg.compareFile",
                "title": "Gitgg: Compare with another branch..."
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "resourceScheme == 'file'",
                    "command": "gitgg.compareFile",
                    "group": "navigation"
                }
            ],
            "editor/context": [
                {
                    "when": "resourceScheme == 'file' || resourceScheme == 'git'",
                    "command": "gitgg.compareFile",
                    "group": "navigation"
                }
            ],
            "scm/resourceState/context": [
                {
                    "command": "gitgg.compareFile",
                    "when": "scmProvider == 'git'",
                    "group": "navigation"
                }
            ],
            "scm/resourceGroup/context": [
                {
                    "command": "gitgg.compareFile",
                    "when": "scmProvider == 'git'",
                    "group": "navigation"
                }
            ],
            "editor/title/context": [
                {
                    "when": "resourceScheme == 'file' || resourceScheme == 'git'",
                    "command": "gitgg.compareFile",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "gitgg.compareFile",
                "key": "shift+\\",
                "when": "explorerResourceIs.root || editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run webpack",
        "webpack": "webpack --mode production",
        "webpack-dev": "webpack --mode development --watch"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.81.0",
        "@types/webpack-env": "^1.18.4",
        "@vscode/test-electron": "^2.3.2",
        "copy-webpack-plugin": "^13.0.1",
        "simple-git": "^3.19.1",
        "ts-loader": "^9.5.1",
        "typescript": "^5.1.3",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4"
    }
}
